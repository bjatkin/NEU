\[] = 0x000 // the start of the screen buffer (goes to 0x400)
\i  = 0x410 // itter for looping (4 bytes)

// for drawing pixels (these can be ored together)
\[3---] = 0b11000000
\[-3--] = 0b00110000
\[--3-] = 0b00001100
\[---3] = 0b00000011

\[2---] = 0b10000000
\[-2--] = 0b00100000
\[--2-] = 0b00001000
\[---2] = 0b00000010

\[1---] = 0b01000000
\[-1--] = 0b00010000
\[--1-] = 0b00000100
\[---1] = 0b00000001

[Init]
  //  check for the loop end
  <   [End]
  <   #\i
  <   2
  ?<

  <.  \[3---]
  <.  \[-2--]
  <.  \[--1-]
  |.
  |.

  <   \[]
  <   16
  <   30
  <   #\i
  +   // 30 + i
  *   // col count times width
  <   7
  +   // add col offset
  +   // add to screen address
  >.

  // update i
  <   #\i
  ++
  <   \i
  >

  // loop
  <   [Init]
  |>

[End]